name: Generate AutoDocs

on:
  push:
    branches: [main]
  workflow_dispatch:

jobs:
  generate-docs:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repo
        uses: actions/checkout@v3

      - name: Run AutoDocs
        uses: intuita-inc/autodocs@v0.1.1
        with:
          api_key: ${{ secrets.OPENAI_API_KEY }}
          output_folder: docs/
